{
    "env": {
        "browser": true,
        "es2021": true,
        "es6": true
    },
    "extends": ["prettier"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react", "prettier"],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "prettier/prettier": [
          "error",
          {
            "printWidth": 80,
            "semi": true,
            "jsxSingleQuote": true,
            "singleQuote": true,
            "useTabs": true,
            "endOfLine":"auto"
          }
        ]
      },
    "globals": { "React": "writable"  }
}
